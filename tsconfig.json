{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*"
  ]
}
